---
import type { TGeneralInfo } from "../types/product";
import Sizes from "./Sizes.astro";

interface Props {
  product: TGeneralInfo;
}

const { product } = Astro.props;
---

<article
  aria-labelledby="product-title"
  class="max-w-7xl mx-auto p-4 sm:p-6 lg:p-8 bg-white shadow-lg rounded-lg"
>
  <div class="flex flex-col md:min-w-[70rem] md:flex-row gap-4 text-center">
    <h2 id="product-title" class="text-2xl md:hidden font-bold text-gray-800">
      {product.title}
    </h2>
    <figure class="md:w-1/2 flex flex-col items-center">
      <img
        class="w-full md:w-[80%] h-96 object-cover rounded-md shadow-md"
        src={product.src}
        alt={`Imagen del producto ${product.title}`}
      />
      <figcaption class="sr-only">Disponible en varias tallas.</figcaption>
      <Sizes />
    </figure>

    <div
      class="md:w-1/2 flex flex-col justify-around items-center space-y-2 p-4 gap-8"
    >
      <h2
        id="product-title"
        class="hidden md:block text-2xl font-bold text-gray-800"
      >
        {product.title}
      </h2>
      <p class="text-gray-600 text-justify">{product.description}</p>

      <div class="flex justify-center items-center w-full gap-8">
        <span class="text-lg font-semibold text-gray-800">${product.price}</span
        >
        <span class="text-md text-gray-500 line-through"
          >${product.priceOld}</span
        >
      </div>

      <button
        aria-label="Pregunta sobre el producto"
        class="md:w-1/4 bg-[#ae55f7] text-sm md:text-md lg:text-lg text-white font-bold p-2 text-center transition duration-500 ease-in-out hover:bg-[#9733ea] hover:scale-105 rounded-xl"
      >
        Pregunta Ya!
      </button>
    </div>
  </div>
</article>
