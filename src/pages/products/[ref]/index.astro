---
import GridProducts from "../../../components/GridProducts.astro";
import Layout from "../../../layouts/Product.astro";
import type { TGeneralInfo } from "../../../types/product.js";
import { references } from "../../../utils/references.js";
import { sizes } from "../../../utils/size.js";

import pkg from "react-icons/md/index";
const { MdMoreHoriz } = pkg;

export async function getStaticPaths() {
  return references.map((reference) => {
    return {
      params: {
        ref: reference.name,
      },
      props: {
        object: reference,
      },
    };
  });
}

const { object } = Astro.props;
const data = object.data;
---

<Layout>
  <GridProducts data={data} object={object} />
</Layout>
